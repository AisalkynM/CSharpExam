@model User
<h1>Register</h1>
<a asp-action="Login" asp-controller="Home">Already have an account?</a>

<form class = "col-5" asp-action="Register" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName" style="color:red;"></span><br>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="LastName" style="color:red;"></span><br>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Email" style="color:red;"></span><br>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Password" style="color:red;"></span><br>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="ConfirmPassword" style="color:red;"></span><br>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>

    <div class="form-group">
        <input type="submit" class="bng btn-outline-primary" value="register">
    </div>
</form>
