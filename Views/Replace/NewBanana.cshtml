@model Banana
<h1>Dojo Activity Center</h1>
<a asp-action="Dashboard" asp-controller="Replace">Home</a> |
<a asp-action="LogOut" asp-controller="Home">Log Out</a><hr>

<h1>Create an Activity:</h1>
<form class="col-5" asp-action="CreateBanana" asp-controller="Replace" method="post">
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">

    <div class="form-group">
        <span class="red" asp-validation-for="Title"></span><br>
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
    </div>

    <div class="form-group">
        <span class="red" asp-validation-for="Date"></span><br>
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date">
    </div>

    <div class="form-group">
        <span class="red" asp-validation-for="Duration"></span><br>
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration">
    </div>
    <div class="form-group">
            <select asp-for="DurationType">
                <option >Hours</option>
                <option >Minutes</option>
                <option >Days</option>
            </select>
        </div>

    <div class ="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="10" rows="5"class="form-control"></textarea>
    </div>


    <div class="form-group">
        <input class="btn btn-outline-warning btn-dark" type="submit" value="Create Activity">
    </div>
</form>